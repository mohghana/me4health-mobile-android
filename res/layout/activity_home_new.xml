<?xml version="1.0" encoding="utf-8"?>


    <ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" 
        >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="438dp"
    android:gravity="center_vertical|center"
    android:orientation="vertical"
    android:weightSum="2" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/bg"
        android:gravity="center_vertical|center"
        android:orientation="vertical"
        android:padding="20dp" >

        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:text="Good Morning, Eddy!"
            android:textColor="@color/apptheme_color"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <TextView
            android:id="@+id/points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_trophy"
            android:gravity="center_vertical|center"
            android:text="200"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="24sp"
            android:typeface="serif" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="227dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="3" >

        <LinearLayout
            android:id="@+id/courses_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.49"
            android:background="@color/learningMagenta"
            android:gravity="center_vertical|center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="View and download new courses"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/text_light"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="142dp"
                android:src="@drawable/ic_book_menu" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Courses"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/text_light"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="serif" />

        </LinearLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2" />

        <LinearLayout
            android:id="@+id/achievements_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.49"
            android:background="@color/apptheme_color"
            android:gravity="center_vertical|center"
            android:orientation="vertical"
            android:padding="5dp" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="View points and badges earned"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/text_light"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="142dp"
                android:src="@drawable/ic_trophy_menu" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Achievements"
                android:textColor="@color/text_light"
                android:textSize="17sp"
                android:textStyle="bold"
                android:typeface="serif" />

        </LinearLayout>

    </LinearLayout>

     </LinearLayout>  
    </ScrollView>


